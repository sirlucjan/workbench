# Maintainer: Piotr Gorski <lucjan.lucjanov@gmail.com>

pkgname=hidpi-daemon-git
_pkgname=hidpi-daemon
pkgver=18.04.6.r1.g8f165bb
pkgrel=1
pkgdesc="Daemon to manage HiDPI and LoDPI monitors on X"
arch=("any")
url="https://github.com/pop-os/hidpi-daemon"
license=("GPL")
depends=('python')
makedepends=('git')
conflits=('hidpi-daemon')
provides=('hidpi-daemon')
source=("git+https://github.com/pop-os/hidpi-daemon")
sha256sums=('SKIP')

pkgver() {
  cd $_pkgname
  
  # git describe
  git describe --long --tags | sed 's/v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd $_pkgname
  python setup.py build
}

package() {
  cd $_pkgname
  python setup.py install --root=${pkgdir} --optimize=1 --skip-build
}
